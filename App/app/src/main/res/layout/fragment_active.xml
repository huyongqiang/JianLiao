<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.zoulf.jianliao.frags.main.ActiveFragment">

  <android.support.v7.widget.RecyclerView
    android:id="@+id/recycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/len_12"
    android:paddingBottom="@dimen/len_12"
    android:background="@drawable/bg_main_recycler"
    android:clipToPadding="false"
    android:elevation="1dp"
    android:outlineProvider="bounds"
    android:visibility="gone"
    tools:targetApi="lollipop"/>

  <com.zoulf.common.widget.EmptyView
    android:id="@+id/empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</FrameLayout>
